<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Changa:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
    <title>Login</title>
  </head>
  <body>
    <div class="container">
      <div class="card gp-login-form mx-auto mt-3 shadow-sm">
        <div class="card-header text-center">
          <h2 class="gp-logo-font mb-1">GuitarPhase</h2>
          <h1>Login</h1>
        </div>

        <div class="card-body">
          <form>
            <!-- Row 1 -->
            <div class="row">
              <div class="col-md-12 mb-3">
                <label for="email" class="form-label">Email Address</label>
                <input id="email" type="email" class="form-control" />
              </div>
            </div>

            <!-- Row 2 -->
            <div class="row">
              <div class="col-md-12 mb-3">
                <label for="password" class="form-label">Password</label>
                <input id="password" type="password" class="form-control" />
              </div>
            </div>

            <!-- Row 3 -->
            <div class="row">
              <div class="col-md-12 mb-3">
                <div class="form-check">
                  <input
                    type="checkbox"
                    id="rememberMe"
                    class="form-check-input"
                  />
                  <label for="rememberMe" class="form-check-label"
                    >Remember Me</label
                  >
                </div>
              </div>
            </div>

            <!-- Row 4 -->
            <div class="d-grid gap-2 mt-3 col-md-6 offset-md-3">
              <button type="submit" class="btn btn-success text-light btn-lg">
                Login
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
